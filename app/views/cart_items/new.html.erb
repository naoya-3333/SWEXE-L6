<%= form_for @cartitem, url: {action: :create} do |f| %>
        
    <%= "商品名：" %>
        <%= @product.id %><br>
    <%= "価格：" %>
        <%= @product.price %><br>
        <%= f.hidden_field :product_id, :value => @product.id %>
    <%= "数量：" %>
        <%= f.number_field :qty, :value => "1" %>
    <%= f.submit'カートに追加' %>
<%end %>